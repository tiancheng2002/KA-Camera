/*  其他功能 */
.other_function{
  position: fixed;
  top: 9%;
  width: 100%;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.function_all{
  width: 95%;
  background-color: pink;
  border-radius: 10px;
  display: flex;
  padding: 6px 0;
  flex-wrap: wrap;
}
.function_item{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 25%;
  height: 140rpx;
}
.item_text{
  font-size: 12px;
}