.container {
  width: 100%;
  height: 100%;
  position: relative;
}
.camera_header{
  padding: 0 6px;
  height: 8%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.camera_show{
  width: 100%;
  height: 70%;
  position: relative;
  display: flex;
  align-items: center; 
}
.camera{
  width: 100%;
  height: 100%;
}
.camera_function{
  height: 22%;
}
.take_border{
  width: 60px;
  height: 60px;
  border-radius: 50px;
  border: 3px solid rgb(255, 69, 100);
  display: flex;
  justify-content: center;
  align-items: center;
}
.take_button{
  background-color: rgb(197, 197, 197);
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.camera.img{
  position: absolute;
  z-index: 999;
  width: 100%;

}
.camera.text{
  font-family: 'Courier New', Courier, monospace;
  position: absolute;
  z-index: 999;
  color: white;
  font-size: 164px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.function_button{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.canvas_view{
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
}
